<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/case_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Case Details"
        />


    <TextView

        android:id="@+id/txt_task_name"
        android:textColor="@color/grey"
        android:text="Patient Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/case_txt"
        android:layout_marginTop="32dp"
        android:textSize="14dp"
        />
    <TextView
        android:id="@+id/patient_txt"
        android:text="Patient Name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_task_name"
        app:layout_constraintBottom_toBottomOf="@id/txt_task_name"
        android:textSize="14dp"

        />

    <TextView
        android:id="@+id/age"
        android:textColor="@color/grey"
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_task_name"
        android:layout_marginTop="16dp"
        android:textSize="14dp"

        />
    <TextView
        android:id="@+id/age_txt"
        android:text="24 years"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/age"
        app:layout_constraintBottom_toBottomOf="@id/age"
        android:textSize="14dp"

        />

    <TextView
        android:id="@+id/phone"
        android:textColor="@color/grey"
        android:text="Patient Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age"
        android:layout_marginTop="16dp"
        android:textSize="14dp"

        />
    <TextView
        android:id="@+id/phone_txt"
        android:text="Patient Name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:textSize="14dp"

        />


    <TextView
        android:id="@+id/date"
        android:textColor="@color/grey"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="16dp"
        android:textSize="14dp"


        />
    <TextView
        android:id="@+id/date_txt"
        android:text="Patient Name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/date"
        app:layout_constraintBottom_toBottomOf="@id/date"
        android:textSize="14dp"

        />


    <TextView
        android:id="@+id/status"
        android:textColor="@color/grey"
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginTop="16dp"
        android:textSize="14dp"

        />
    <TextView
        android:id="@+id/status_txt"
        android:text="Patient Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/status"
        app:layout_constraintBottom_toBottomOf="@id/status"
        android:textSize="14dp"

        />

    <TextView
        android:id="@+id/description"
        android:textColor="@color/grey"
        android:text="Case Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:layout_marginTop="16dp"
        android:textSize="14dp"


        />

    <TextView
        android:id="@+id/description_text"
        android:text="deedkk;df;kf;fj;kfgk;fskm;fgfkg;kfs"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>