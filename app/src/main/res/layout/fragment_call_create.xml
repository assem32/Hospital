<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/create_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/name_editor"
        android:background="@drawable/style_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_txt"
        android:hint="Patient Name"
        android:layout_marginTop="24dp"

        />

    <EditText
        android:id="@+id/age_editor"
        android:background="@drawable/style_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_editor"
        android:hint="Age"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/phone_editor"
        android:background="@drawable/style_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age_editor"
        android:hint="Phone"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:id="@+id/select_doctor_editor"
        android:background="@drawable/style_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_editor"
        android:hint="Doctors"
        android:layout_marginTop="20dp"

        android:clickable="true"
        />

    <EditText
        android:id="@+id/description_editor"
        android:background="@drawable/style_textbox"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_doctor_editor"
        android:hint="Description"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:clickable="true"
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/style_btn"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Create a call"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />






</androidx.constraintlayout.widget.ConstraintLayout>